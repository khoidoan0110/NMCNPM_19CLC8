<link rel="stylesheet" href="/css/order.css">
<div class="container">
    <article class="card">
        <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>
        <h1 style="color:#008000; font-weight:bold">ORDER LIST</h1>
        {{#each order}}

        <div class="card-body">
            <article class="card">

                <div class="card-body row">
                    <div class="col"> <strong>Order ID:</strong>{{this._id}} </div>
                    {{#if this.cancel }}
                    <div class="col"><strong>Status:</strong>Cancelled</div>
                    {{else}} 
                    <div class="col"><strong>Status:</strong>{{this.status}}</div>
                    {{/if}}
                    <div class="col"> <strong>Voucher:</strong>{{this.voucher_applied}}</div>
                    <div class="col"> <strong>Total:</strong>{{this.total}}</div>
                </div>
            </article>

            <table class="data-tables table table-bordered" style="width:100%">
                <thead style="background-color: #48AAAD; color: white">
                    <tr>
                        <th width="7%" style="text-align: center;">Item</th>
                        <th width="10%" style="text-align: center;">Product Name</th>
                        <th width="3%" style="text-align: center;">Amount</th>
                        <th width="3%" style="text-align: center;">Price</th>
                    </tr>
                </thead>
                {{#each this.products}}
                <tbody>
                    <tr>
                        <td><img src={{this.image}} style="width:auto;height:100px; vertical-align:middle"></td>
                        <td>{{this.name}}</td>
                        <td>{{this.quantity}}</td>
                        <td>{{this.price}}</td>
                    </tr>
                </tbody>
                {{/each}}
            </table>
            <div class="line"></div>
            {{#if this.cancel }}
            {{else}} <button class="button cancel" data-orderid={{this._id}} onclick="cancelOrder(event)">
                Cancel Order
            </button>
            {{/if}}

        </div>
        {{/each}}

        <div class="col-md-12">
            <div class="pagination col-md-12" style="margin-left:10px">
                <ul class="page-list">
                    <li class="page"><a href="#">&lt;&lt;</a></li>
                    {{#each pages}}
                    <li class=" page"><a href={{this.pageA}}>{{this.page}}</a></li>
                    {{/each}}
                    <li class="page"><a href="#">&gt;&gt;</a></li>
                </ul>
            </div>

        </div>
        <div id="current-page" style="display: none;" name={{currentPage}}></div>
    </article>

</div>