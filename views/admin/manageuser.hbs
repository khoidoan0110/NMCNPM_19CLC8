<link rel="stylesheet" href="/css/manageproduct.css">
<script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>

<h1 style="color:#008000; font-weight:bold" >WHACK-A-MOLE</h1>
<div class="iq-card-body" style="width: 80%; margin: auto">
    <div class="table-responsive">
        <table class="data-tables table table-striped table-bordered" id='whack' style="width:100%">
        <thead>
            <tr>
                <th width="5%" style="text-align: center;">ID</th>
                <th width="5%" style="text-align: center;">First Name</th>
                <th width="5%" style="text-align: center;">Last Name</th>
                <th width="10%" style="text-align: center;">Email</th>
                <th width="5%" style="text-align: center;">Role</th>
                <th width="5%" style="text-align: center;">Status</th>
                <th width="5%" style="text-align: center;">Activity</th>
            </tr>
        </thead>
        <tbody>
        {{#each user}}
            <tr>
                <td class = "userid" style="text-align: center; font-size: large; vertical-align:middle">{{this._id}}</td>
                <td style="text-align: center; font-size: large; vertical-align:middle">{{this.firstName}}</td> 
                <td style="text-align: center; font-size: large; vertical-align:middle">{{this.lastName}}</td>
                <td style="text-align: center; font-size: large; vertical-align:middle">{{this.email}}</td>
                <td style="text-align: center; font-size: large; vertical-align:middle">{{this.role}}</td>
                <td style="text-align: center; font-size: large; vertical-align:middle">
                    <button class="statbut" value = "{{this.status}}">
                        {{#if this.status}} <i class="fas fa-check" style="color:white"></i>{{/if}}
                        {{#unless this.status}}<i class="fas fa-ban" style="color:white"></i>{{/unless}}
                    </button>
                </td>
                <td style="text-align: center; font-size: large; vertical-align:middle">{{this.active}}</td>
            </tr>
        {{/each}}
        </tbody>
        <div class="col-md-12">
            <div class="pagination col-md-12"style="margin-left:10px">
                <ul class="page-list">
                    <li class="page"><a href={{pages.0.pageA}}>&lt;&lt;</a></li>
                    {{#each pages}}
                    <li class=" page"><a href={{this.pageA}}>{{this.page}}</a></li>
                    {{/each}}
                    <li class="page"><a href="#">&gt;&gt;</a></li>
                </ul>
            </div>

        </div>
        
    </table>

    </div>
</div>
