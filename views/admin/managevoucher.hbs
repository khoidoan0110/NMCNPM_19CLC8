<link rel="stylesheet" href="/css/manageproduct.css">
<script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>

<h1 style="color:#008000; font-weight:bold" >VOUCHER LIST</h1>
<div class="iq-card-body" style="width: 80%; margin: auto">
    <div class="table-responsive">
        <table class="data-tables table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th width="5%" style="text-align: center;">ID</th>
                <th width="5%" style="text-align: center;">Name</th>
                <th width="5%" style="text-align: center;">Discount</th>
                <th width="7%" style="text-align: center;">Date</th>
                <th width="5%" style="text-align: center;">Status</th>
                <th width="5%" style="text-align: center;"></th>
            </tr>
        </thead>
        <tbody>
        {{#each voucher}}
            <tr>
                <td class = "vid" style="text-align: center; font-size: large; vertical-align:middle">{{this._id}}</td> 
                <td class = "vname" style="text-align: center; font-size: large; vertical-align:middle">{{this.name}}</td> 
                <td class = "vdis" style="text-align: center; font-size: large; vertical-align:middle">{{this.discount}}</td>
                <td class = "vdate" style="text-align: center; font-size: large; vertical-align:middle">{{this.createdAt}}</td>
                <td class = "vstat" style="text-align: center; font-size: large; vertical-align:middle">{{this.status}}</td>
                <td style="vertical-align:middle">
                    <div class="icon-bar">
                        <a class="active" href="{{this._id}}/edit">
                            <i class="fas fa-pencil-alt"></i>
                        </a>
                        <a class="active trashlink" style="cursor: pointer">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </div>
                </td>
            </tr>
        {{/each}}
        </tbody>
        <div class="col-md-12">
            <div class="pagination col-md-12"style="margin-left:10px">
                <ul class="page-list">
                    <li class="page"><a href={{pages.0.pageA}}>&lt;&lt;</a></li>
                    {{#each pages}}
                    <li class=" page"><a href={{this.pageA}}>{{this.page}}</a></li>
                    {{/each}}
                    <li class="page"><a href="#">&gt;&gt;</a></li>
                </ul>
            </div>

        </div>
        
    </table>
    <a href="/admin/createvoucher/">
    <button class="press create-button">
        Create New Voucher
    </button>
            </a>

    </div>
</div>